{
  "name": "KSPlayer",
  "version": "1.0",
  "summary": "Video Player Using Swift, based on AVPlayer,FFmpeg",
  "description": "Video Player Using Swift, based on ffmpeg, support for the horizontal screen, vertical screen, the upper and lower slide to adjust the volume, the screen brightness, or so slide to adjust the playback progress.",
  "homepage": "https://github.com/kingslay/KSPlayer",
  "authors": {
    "kintan": "kingslay@icloud.com"
  },
  "license": "MIT",
  "source": {
    "git": "https://github.com/kingslay/KSPlayer.git",
    "tag": "1.0"
  },
  "platforms": {
    "ios": "10.0",
    "osx": "10.12",
    "tvos": "10.2"
  },
  "swift_versions": "5.2",
  "static_framework": true,
  "testspecs": [
    {
      "name": "Tests",
      "test_type": "unit",
      "source_files": "Tests/KSPlayerTests/*.swift",
      "resources": "Tests/KSPlayerTests/Resources/*"
    }
  ],
  "subspecs": [
    {
      "name": "UXKit",
      "source_files": "Sources/KSPlayer/UXKit/*.{swift}",
      "frameworks": "Foundation"
    },
    {
      "name": "Basic",
      "source_files": "Sources/KSPlayer/Basic/*.{swift}",
      "dependencies": {
        "KSPlayer/UXKit": [

        ]
      }
    },
    {
      "name": "Subtitle",
      "source_files": "Sources/KSPlayer/Subtitle/*.{swift}",
      "frameworks": "Foundation"
    },
    {
      "name": "FFmpeg",
      "libraries": [
        "bz2",
        "z",
        "iconv",
        "xml2"
      ],
      "ios": {
        "xcconfig": {
          "HEADER_SEARCH_PATHS": "${PODS_ROOT}/KSPlayer/Sources/FFmpeg.xcframework/ios-arm64/FFmpeg.framework/Headers ${PODS_ROOT}/../../Sources/FFmpeg.xcframework/ios-arm64/FFmpeg.framework/Headers"
        }
      },
      "tvos": {
        "xcconfig": {
          "HEADER_SEARCH_PATHS": "${PODS_ROOT}/KSPlayer/Sources/FFmpeg.xcframework/tvos-arm64/FFmpeg.framework/Headers ${PODS_ROOT}/../../Sources/FFmpeg.xcframework/tvos-arm64/FFmpeg.framework/Headers"
        }
      },
      "osx": {
        "xcconfig": {
          "HEADER_SEARCH_PATHS": "${PODS_ROOT}/KSPlayer/Sources/FFmpeg.xcframework/macos-x86_64/FFmpeg.framework/Headers ${PODS_ROOT}/../../Sources/FFmpeg.xcframework/macos-x86_64/FFmpeg.framework/Headers"
        }
      },
      "vendored_frameworks": "Sources/FFmpeg.xcframework",
      "dependencies": {
        "Openssl": [

        ]
      }
    },
    {
      "name": "Metal",
      "source_files": "Sources/KSPlayer/Metal/*.{swift,metal}",
      "resource_bundles": {
        "Metal": [
          "Sources/KSPlayer/Metal/*.metal"
        ]
      },
      "weak_frameworks": "MetalKit"
    },
    {
      "name": "AVPlayer",
      "source_files": "Sources/KSPlayer/AVPlayer/*.{swift}",
      "frameworks": "AVFoundation",
      "ios": {
        "frameworks": "UIKit"
      },
      "tvos": {
        "frameworks": "UIKit"
      },
      "osx": {
        "frameworks": "AppKit"
      },
      "dependencies": {
        "KSPlayer/Basic": [

        ]
      }
    },
    {
      "name": "MEPlayer",
      "source_files": "Sources/KSPlayer/MEPlayer/**/*.{swift}",
      "frameworks": [
        "AudioToolbox",
        "VideoToolbox"
      ],
      "dependencies": {
        "KSPlayer/FFmpeg": [

        ],
        "KSPlayer/AVPlayer": [

        ],
        "KSPlayer/Metal": [

        ],
        "KSPlayer/Subtitle": [

        ]
      }
    },
    {
      "name": "Core",
      "source_files": "Sources/KSPlayer/Core/*",
      "dependencies": {
        "KSPlayer/AVPlayer": [

        ]
      },
      "resource_bundles": {
        "KSResources": [
          "Sources/KSPlayer/Core/Resources/*"
        ]
      }
    },
    {
      "name": "Audio",
      "source_files": "Sources/KSPlayer/Audio/*.swift",
      "dependencies": {
        "KSPlayer/Core": [

        ],
        "KSPlayer/Subtitle": [

        ]
      }
    },
    {
      "name": "Video",
      "source_files": "Sources/KSPlayer/Video/*.swift",
      "dependencies": {
        "KSPlayer/Core": [

        ],
        "KSPlayer/Subtitle": [

        ]
      }
    }
  ],
  "swift_version": "5.2"
}
